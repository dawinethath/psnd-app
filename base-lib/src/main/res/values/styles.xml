<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="NoDataTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/noData</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/noData</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
    </style>

    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MaterialButtonAppearance">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Default">
        <item name="android:textColor">@color/textViewHeaderColor</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconSize">@dimen/space_24dp</item>
        <item name="iconTint">@color/textViewHeaderColor</item>
        <item name="strokeColor">@color/textViewHeaderColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/MaterialButtonAppearance</item>
    </style>

</resources>