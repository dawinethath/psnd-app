<resources>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.AppDefault">
        <item name="android:textColorHint">@color/textViewHeaderColor</item>
        <item name="boxStrokeColor">@color/textViewHeaderColor</item>
        <item name="endIconTint">@color/textViewHeaderColor</item>
        <item name="startIconTint">@color/textViewHeaderColor</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.AppDefaultWhite">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu.AppDefault">
        <item name="android:textColorHint">@color/textViewHeaderColor</item>
        <item name="boxStrokeColor">@color/textViewHeaderColor</item>
        <item name="endIconTint">@color/textViewHeaderColor</item>
        <item name="startIconTint">@color/textViewHeaderColor</item>
    </style>

    <style name="DetailLabel">
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:layout_marginTop">@dimen/space_12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DetailValueLabel">
        <item name="android:textColor">@color/textViewHeaderColor</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">@dimen/space_16dp</item>
        <item name="android:layout_marginStart">@dimen/space_26dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingCaption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingTop">@dimen/space_08dp</item>
        <item name="android:paddingBottom">@dimen/space_08dp</item>
        <item name="fontFamily">@string/font_family_medium</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewHeaderColor</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/space_16dp</item>
        <item name="drawableTint">@color/textViewHeaderColor</item>
        <item name="android:paddingStart">@dimen/space_32dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:paddingTop">@dimen/space_16dp</item>
        <item name="android:paddingBottom">@dimen/space_16dp</item>
    </style>

    <style name="ProfilePhoto">
        <item name="backgroundImage">@color/textViewColor</item>
        <item name="viewAspectRatio">@dimen/photo_viewAspectRatio</item>
        <item name="failureImage">@drawable/ic_person</item>
        <item name="placeholderImage">@drawable/ic_person</item>
        <item name="roundedCornerRadius">@dimen/cardCornerRadius</item>
        <item name="roundingBorderColor">@android:color/white</item>
    </style>
</resources>