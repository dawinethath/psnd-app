<resources>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.AppDefault">
        <item name="android:textColorHint">@color/textViewHeaderColor</item>
        <item name="boxStrokeColor">@color/textViewHeaderColor</item>
        <item name="endIconTint">@color/textViewHeaderColor</item>
        <item name="startIconTint">@color/textViewHeaderColor</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu.AppDefault">
        <item name="android:textColorHint">@color/textViewHeaderColor</item>
        <item name="boxStrokeColor">@color/textViewHeaderColor</item>
        <item name="endIconTint">@color/textViewHeaderColor</item>
        <item name="startIconTint">@color/textViewHeaderColor</item>
    </style>

    <style name="DetailLabel">
        <item name="android:textColor">@color/textViewHeaderColor</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:layout_marginTop">@dimen/space_12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DetailValueLabel">
        <item name="android:textColor">@color/textViewHeaderColor</item>
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">@dimen/space_16dp</item>
        <item name="android:layout_marginStart">@dimen/space_26dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>